<div class="col-xs-6 col-xs-offset-3">
  <div class="text-center">
    <h2>Review</h2>
    <p>Content: <%= @review.content %></p>
    <p>Rating: <%= @review.rating %> out of 5</p>
  </div>

  <div class="text-center">
    <%= link_to "Return to restaurant reviews", restaurant_reviews_path(@restaurant), class: 'btn btn-primary' %>
    <%= link_to "Return to restaurant", restaurant_path(@restaurant), class: 'btn btn-primary' %>
    <%= link_to "Return to index", restaurants_path, class: 'btn btn-primary' %>
  </div>
</div>
