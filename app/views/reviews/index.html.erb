<div class="col-xs-6 col-xs-offset-3">
  <div class="text-center">
    <h1>Reviews for "<%= @restaurant.name %>"</h1>
  </div>

  <div class="text-center">
    <p>
      <% @reviews.each do |r| %>
      <p><%= r.content %> (<%= r.rating %>)</p>
      <% end %>
    </p>
  </div>

  <div class="text-center">
    <%= link_to "Return to restaurant", restaurant_path(@restaurant), class: 'btn btn-primary' %>
    <%= link_to "Return to index", restaurants_path, class: 'btn btn-primary' %>
  </div>
</div>

