<div class="col-xs-6 col-xs-offset-3">
  <div class="text-center">
    <h1><%= @restaurant.name %></h1>
    <h2>Information</h2>
    <p>Category: <%= @restaurant.category %></p>
    <p>Address: <%= @restaurant.address %></p>
    <p>Number: <%= @restaurant.phone_number %></p>
  </div>

  <div class="text-center">
    <p>
      <h2>Reviews</h2>
      <% @restaurant.reviews.each do |r| %>
      <p><%= r.content %> (<%= r.rating %>)</p>
      <% end %>
    </p>
  </div>

  <div class="text-center">
    <%= link_to "View all reviews", restaurant_reviews_path(@restaurant), class: 'btn btn-primary' %>
    <%= link_to "Add a new review", new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
    <%= link_to "Return to index", restaurants_path, class: 'btn btn-primary' %>
  </div>
</div>

